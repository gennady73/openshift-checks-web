{
    "version": 1,
    "disable_existing_loggers": false,
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout",
            "formatter": "app_log_formatter"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "./logs/flask.log",
            "formatter": "default",
            "maxBytes": 1000000,
            "backupCount": 1,
            "delay": "True"
        }
    },
    "formatters": {
      "app_log_formatter": {
        "()":  "modules.logger.custom_formatter.CustomFormatter"
      },
      "default": {
        "format": "[%(asctime)s] %(levelname)s in %(module)s: %(message)s"
      }
    },
    "loggers": {
      "root": {"level": "DEBUG", "handlers": ["console", "file"]},
      "apscheduler": {"level": "DEBUG", "handlers": ["console", "file"], "propagate": false},
      "sqlalchemy": {"level": "WARNING", "handlers": ["console", "file"], "propagate": false},
      "werkzeug": {"level": "WARNING", "handlers": ["console", "file"], "propagate": false},
      "apscheduler.scheduler": {"level": "DEBUG", "handlers": ["console", "file"], "propagate": false}
    }
}
